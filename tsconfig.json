{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "tsBuildInfoFile": ".tsbuildinfo", 
    "incremental": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "inlineSources": true,
    "lib": [
      "es6",
      "dom"
    ],
    "newLine": "lf",
    "noEmitOnError": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "**/lib",
    "**/*.spec.ts"
  ]
}
 